<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Базовая тема приложения -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnBackground">@color/primary_text</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Стиль для экранов авторизации -->
    <style name="AuthTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Стили для кнопок -->
    <style name="SportButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SportButton.Primary">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SportButton.Secondary">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Стили для текстовых полей -->
    <style name="SportTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!-- Стили для карточек -->
    <style name="SportCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <!-- Стили для заголовков -->
    <style name="SportTitle">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SportSubtitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стили для ссылок -->
    <style name="SportLink">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <!-- Стили для иконок -->
    <style name="SportIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/primary_color</item>
    </style>

    <!-- Стили для Bottom Navigation -->
    <style name="BottomNavigationTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Активный индикатор для Bottom Navigation -->
    <style name="App.Widget.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white_alpha_30</item>
        <item name="android:height">32dp</item>
        <item name="android:width">64dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="ProfileInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="InfoLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>