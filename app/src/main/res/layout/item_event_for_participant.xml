<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with Name and Statuses -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Турнир по футболу" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tvEventStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"
                        android:background="@drawable/status_active_background"
                        android:layout_marginBottom="4dp"
                        tools:text="Регистрация открыта" />

                </LinearLayout>
            </LinearLayout>

            <!-- Join Status Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_person_check"
                    app:tint="@color/secondary_text"
                    android:contentDescription="Статус участия" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статус участия: "
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text" />

                <!-- Вариант 3: Белый текст для активных статусов, серый для неопределенных -->
                <TextView
                    android:id="@+id/tvJoinStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/status_neutral_background"
                    tools:text="Проверка"
                    tools:textColor="@color/white"
                    tools:background="@drawable/status_pending_background" />
            </LinearLayout>

            <!-- Location Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivLocationIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/secondary_text"
                    android:contentDescription="Локация" />

                <TextView
                    android:id="@+id/tvEventAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Спортивный комплекс «Олимп»" />
            </LinearLayout>

            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/secondary_text"
                    android:contentDescription="Время" />

                <TextView
                    android:id="@+id/tvEventDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    tools:text="15 мар 2024 в 14:00" />
            </LinearLayout>

            <!-- Participants Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_people"
                    app:tint="@color/secondary_text"
                    android:contentDescription="Участники" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Участники: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvEventParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    tools:text="12/20" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Progress Bar for Participants -->
                <ProgressBar
                    android:id="@+id/progressParticipants"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="16dp"
                    android:progressTint="@color/primary_color"
                    android:progressBackgroundTint="@color/light_gray"
                    tools:progress="60" />
            </LinearLayout>

            <!-- Divider and Action Hint -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:background="@color/light_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нажмите для просмотра деталей"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:textAlignment="center"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>